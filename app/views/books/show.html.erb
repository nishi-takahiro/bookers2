
  
 <div class = 'container px-5 px-sm-0'>
      <div class = 'row'>
          <div class = 'col-md-3'>
              
             <%= render "list", book: @book_new, user: @book.user %>
          </div>
          <div class = 'col-md-8 offset-md-1'>
                  <h2>Book detail</h2>
                  <table class = 'table table-hover table-inverse'>
                       <thead>
                           <tr>
                           <th></th>
                           <th>Title</th>
                           <th>Opinion</th>
                           <th colspan="3"></th>
                           </tr>
                       </thead>
                       
                      <tr>
                         
                        <td>
                           <%= link_to user_path(@book.user_id) do %> 
                           <%= image_tag @book.user.get_profile_image(100,100), fallback: "default-image.jpg" %>
                           <br><%= @book.user.name %>
                           <% end %>
                        </td>
                        <td><%= @book.title %></td>
                        <td><%= @book.body %></td>
                         
                        <td colspan = "3">
                          <% if @book.user == current_user %>
                            <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
                          <% end %>
                          
                          <% if @book.user == current_user %>
                            <%= link_to"Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか?" %>
                          <% end %>
                        </td>
                      </tr>
                  </table>
          </div>
      </div>
  </div>