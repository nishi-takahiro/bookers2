<div class = 'container px-5 px-sm-0'>
  <div class = 'row'>
    <div class = 'col-md-3'>
        <%= render "books/list", book: @book, user: @user %>
    </div>       
    <div class = 'col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class = 'table table-hover table-inverse'>
           <thead>
               <tr>
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
               <th colspan="3"></th>
               </tr>
           </thead>
           <tboy>
                <% @books.each do |book, title, body| %>
                 <tr>
                  <td>
                    <%= link_to user_path(book.user.id) do %>
                        <%= image_tag @user.get_profile_image(100,100) %>
                    <% end %>
                  </td>
                    
                  <td><%= link_to book.title, book, class: "book_path(current_user.id)" %></td>
                  <td><%= book.body %></td>
                 </tr>
                <% end %>
           </tboy>  
      </table>
    </div>
  </div>
</div>