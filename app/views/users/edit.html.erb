<div class = 'container'>
    <div class = 'row'>
        <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>User info</h2>
              <div id = "error_explanation">
                <% if @user.errors.any? %>
                  <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
                  <ul>
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                  </ul>
                <% end %>
              </div>
              
            <%= form_with model: User.new, url: user_path, method: :patch do |f| %>
              <div class = "form-group">
                  <label for = "user-name" %>Name</label>
                  <%= f.text_field :name %>
              </div>  
              <div class = "form-group">
                  <label for = "user_image">Image</label>
                  <%= f.file_field :profile_image, accept: "image/*" %>
              </div>
              <div class = "form-group">
                  <label calass ="Introduction">Introduction</label>
                  <%= f.text_area :introduction %>
              </div>
                  <%= f.submit 'Update User', class: "btn btn-secondary" %>
            <% end %>
            
        </div>
    </div>
</div>